{
  "buildCommand": "pnpm run vercel-build",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "framework": "nextjs",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "lint": false,
        "skipLockfileCheck": true
      }
    }
  ]
} 